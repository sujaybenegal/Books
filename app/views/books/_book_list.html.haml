%table.table.table-striped
  -if !@books.nil?
    %tr
      %th Book
      %th Title
      %th Authors

      - @books.each do |book|
        %tr{:onmouseover => "show_book_detail('#{book.description.nil? ? "No description Available" : book.description.truncate(500)}')"}
          %td{:onmouseover => "show_book_detail('#{book.description.nil? ? "No description Available" : book.description.truncate(500)}')"}= image_tag book.image_link, :size => "25x25", :class => "thumbnail"
          %td{:onmouseover => "show_book_detail('#{book.description.nil? ? "No description Available" : book.description.truncate(500)}')"}= book.title
          %td{:onmouseover => "show_book_detail('#{book.description.nil? ? "No description Available" : book.description.truncate(500)}')"}= book.authors
    #paginator
      = paginate @books, :remote => true
  -else
    %tr
      %th Could not find any details regarding this book
